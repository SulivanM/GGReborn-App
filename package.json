{
  "name": "GGRebornApp",
  "version": "0.0.7",
  "description": "Simple, customizable client with built in flash player to play GoodGame Caf√©, Disco and Fashion.",
  "main": "app/src/main.js",
  "repository": "https://github.com/GGR-Devs/GGReborn-App",
  "author": "GGReborn",
  "contributors": [
    {
      "name": "BXn4",
      "url": "https://github.com/bxn4"
    },
    {
      "name": "SulivanM",
      "url": "https://github.com/SulivanM"
    },
    {
      "name": "MKerem",
      "url": "https://github.com/keremgokcek"
    }
  ],
  "keywords": [
    "ggreborn",
    "ggreborn app",
    "goodgame cafe reborn",
    "goodgame disco reborn",
    "goodgame fashion reborn"
  ],
  "funding": {
    "type": "Buy Me a Coffee",
    "url": "https://buymeacoffee.com/ggreborn"
  },
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "publish": {
    "provider": "github",
    "releaseType": "release"
  },
  "build": {
    "appId": "com.ggreborn.app",
    "productName": "GGRebornApp",
    "win": {
      "target": "nsis",
      "icon": "./app/icons/icon.ico",
      "extraResources": [
        {
          "from": "lib/pepflashplayer.dll",
          "to": "lib/pepflashplayer.dll"
        }
      ]
    },
    "mac": {
      "icon": "./app/icons/icon.icns",
      "extraResources": [
        {
          "from": "lib/PepperFlashPlayer.plugin",
          "to": "lib/PepperFlashPlayer.plugin"
        }
      ],
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.games",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
    },
    "linux": {
      "target": [
        "AppImage",
        "tar.gz"
      ],
      "icon": "./app/icons/icon.png",
      "category": "Game",
      "extraResources": [
        {
          "from": "lib/libpepflashplayer.so",
          "to": "lib/libpepflashplayer.so"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "license": "LICENSE",
      "deleteAppDataOnUninstall": true,
      "createDesktopShortcut": true
    },
    "asar": true,
    "files": [
      "**/*",
      "!lib",
      "!app/icons"
    ]
  },
  "dependencies": {
    "discord-rpc": "^4.0.1",
    "electron-updater": "^6.3.9",
    "jszip": "^3.10.1",
    "crypto-js": "^4.2.0",
    "pouchdb": "^9.0.0"
  },
  "devDependencies": {
    "electron": "10.0.0",
    "electron-builder": "^25.1.8"
  }
}